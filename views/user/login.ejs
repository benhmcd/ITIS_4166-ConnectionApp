<%- include('../partials/header.ejs')%>
    <nav>
        <div class='container'>
            <form action='/users/login' method='POST'>
                <table class = 'center'>
                    <tr class='form_row'>
                        <td class='form_col'><label for="email">Email Address</label></td>
                        <td class='form_col'><input type="email" id="email" name="email" class="fixed-width" required></td>
                    </tr>
                    <tr class='form_row'>
                        <td class='form_col'><label for="password">Password</label></td>
                        <td class='form_col'><input type="password" id="password" name="password" class="fixed-width" minlength="8"
                                maxlength="64" required></td>
                    </tr>

                    <tr>
                        <td colspan="2" class="align-right"><button class="form_btn">Login</button></td>
                    </tr>
                </table>
            </form>

        </div>
    </nav>
